<configuration>

    <!-- SYNCHRONOUS console output - only for INFO and above -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ASYNC file appender to prevent blocking on disk I/O -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE"/>
    </appender>

    <!-- FILE appender for async writing -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/tan.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce noise from external libraries -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.redisson" level="WARN"/>
    <logger name="com.mysql" level="WARN"/>
    <logger name="org.leralix.tan" level="INFO"/>

    <!-- Root logger: console for important stuff, async file for everything -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC_FILE"/>
    </root>

</configuration>
